@model FinalDiploma.Models.Dish

@{
    ViewBag.Title = "Details";
}

<h2>@Html.DisplayFor(model => model.Name)</h2>

<div>
    <hr />
    <dl class="dl-horizontal">


        <dt>
            Категорія
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.Name)
        </dd>

        <dt>
            Ціна
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price) грн
        </dd>

        @*<dt>
                @Html.DisplayNameFor(model => model.Preview)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Preview)
            </dd>*@
        
        <dt>
            Вага
        </dt>

        <dd>
            @ViewBag.TotalWeight грам
        </dd>
    </dl>
</div>
<h2>Cклад</h2>
<table id="waiterTable" class="table table-striped table-bordered" style="width:100%">
    <tr>
        <td><b>Продукт</b></td>
        <td><b>Вага</b></td>
        <td><b>Дія</b></td>
    </tr>
    @foreach (var product in ViewBag.products)
    {
        string path = String.Format("Delete/{0}", product.Id);
        <tr>
            <td>@product.Product.Name</td>
            <td>@product.Weight грам</td>
            <td><p>
                @Html.ActionLink("Видалити", path, "DishEntries")
                </p>
            </td>
        </tr>
    }
</table>
