@model IEnumerable<FinalDiploma.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Категорії меню</h2>

<p>
    @Html.ActionLink("Створити нову категорію", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Назва
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Змінити", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Детальніше", "Details", new { id=item.Id }) |
            @Html.ActionLink("Видалити", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
