@model IEnumerable<FinalDiploma.Models.Ord>

@{
    ViewBag.Title = "Замовлення";
}

<h2>Замовлення</h2>

<p>
    @Html.ActionLink("Відкрити нове замовлення", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Індифікатор замовлення
        </th>
        <th>
            Офіцант
        </th>
        <th>
            Клієнт
        </th>
        <th>
            Номер столику
        </th>
        <th>
            Сумма
        </th>
        <th>
            Час відкриття замовлення
        </th>
        <th>
            Час закриття замовлення
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegUser.Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegUser1.Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tabl.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCost);
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeOpen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeEnd)
            </td>
            <td>
                @Html.ActionLink("Змінити", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Детальніше", "Details", new { id = item.Id }) |
                @{ if (item.TimeEnd == null)
                    {
                    @Html.ActionLink("Закрити замовлення ", "CloseOrd", new { id = item.Id });
                            @Html.Label(" | ");
                        }

                    }
                @Html.ActionLink("Видалити", "Delete", new
                {
                    id = item.Id })
            </td>
        </tr>
    }

</table>
